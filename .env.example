# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_APPLICATION_ID=1447797969423175742
# Admin channel for /persona create, /persona delete, /persona list, /persona rename commands
DISCORD_ADMIN_CHANNEL=general

# Google Cloud Configuration
GCP_PROJECT_ID=jacks-johns
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json

# Model Configuration (can be changed to use different models)
GEMINI_MODEL=gemini-2.5-flash
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image

# Service URLs (used by Discord bot to communicate with Agent service)
# For local development with docker-compose:
AGENT_SERVICE_URL=http://agent-service:8000
# For local development without docker:
# AGENT_SERVICE_URL=http://localhost:8000

# Agent Service Configuration
AGENT_SERVICE_PORT=8000
AGENT_SERVICE_HOST=0.0.0.0

# Firestore Configuration (for persona persistence)
USE_FIRESTORE=true
FIRESTORE_DATABASE=jacksjohns-bot
FIRESTORE_COLLECTION=personas

# Agent Engine Configuration (for Sessions and Memory Bank)
# If not set, an Agent Engine instance will be auto-created on first run
# Once created, you can set this to reuse the same instance
USE_AGENT_ENGINE=true
AGENT_ENGINE_ID=
AGENT_ENGINE_DISPLAY_NAME=jacksjohns-bot-engine
